{
  "name": "@todo-app/root",
  "version": "1.0.0",
  "private": true,
  "description": "Modern TODO app with pnpm workspace, Next.js App Router, and WebSocket real-time sync",
  "scripts": {
    "dev": "pnpm --parallel --recursive dev",
    "dev:frontend": "pnpm --filter @todo-app/frontend dev",
    "dev:backend": "pnpm --filter @todo-app/backend dev",
    "build": "pnpm --recursive build",
    "build:frontend": "pnpm --filter @todo-app/frontend build",
    "build:backend": "pnpm --filter @todo-app/backend build",
    "start": "pnpm --parallel --recursive start",
    "start:frontend": "pnpm --filter @todo-app/frontend start",
    "start:backend": "pnpm --filter @todo-app/backend start",
    "test": "pnpm --recursive test",
    "type-check": "pnpm --recursive type-check",
    "lint": "pnpm --recursive lint",
    "clean": "pnpm --recursive clean",
    "install-deps": "pnpm install"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "prettier": "^3.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "keywords": [
    "todo",
    "next.js",
    "websocket",
    "pnpm",
    "monorepo",
    "typescript",
    "real-time"
  ],
  "author": "Todo App Team",
  "license": "MIT"
}
