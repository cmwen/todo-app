{
  "name": "@todo-app/backend",
  "version": "1.0.0",
  "description": "Backend API for the TODO app with CLI, web server, MCP protocol, and WebSocket support",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "ts-node src/index.ts",
    "dev:cli": "ts-node src/index.ts",
    "dev:web": "ts-node src/index.ts web",
    "dev:mcp": "ts-node src/index.ts mcp",
    "start": "node dist/index.js",
    "start:cli": "node dist/index.js",
    "start:web": "node dist/index.js web",
    "start:mcp": "node dist/index.js mcp",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "migrate": "ts-node scripts/migrate.ts",
    "migrate:rollback": "ts-node scripts/migrate.ts --rollback",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "clean": "rimraf dist"
  },
  "keywords": [
    "todo",
    "api",
    "backend",
    "cli",
    "web",
    "mcp",
    "websocket",
    "typescript",
    "sqlite"
  ],
  "author": "TODO App Team",
  "license": "MIT",
  "bin": {
    "todo-app": "./dist/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@types/inquirer": "^9.0.9",
    "better-sqlite3": "^9.6.0",
    "commander": "^11.1.0",
    "express": "^4.18.2",
    "inquirer": "^12.9.4",
    "socket.io": "^4.7.5",
    "uuid": "^9.0.1",
    "ws": "^8.18.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
