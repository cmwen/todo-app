{
	"files": [],
	"references": [
		{ "path": "packages/shared" },
		{ "path": "packages/backend" },
		{ "path": "packages/mcp" },
		{ "path": "packages/cli" }
	],
		"compilerOptions": {
			"target": "ES2022",
			"module": "NodeNext",
			"moduleResolution": "NodeNext",
		"resolveJsonModule": true,
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "dist",
				"rootDir": ".",
				"baseUrl": ".",
				"paths": {
					"@todo-app/shared": ["packages/shared/src/index.ts"],
					"@todo-app/shared/*": ["packages/shared/src/*"],
					"@todo-app/backend": ["packages/backend/src/server.ts"],
					"@todo-app/backend/*": ["packages/backend/src/*"],
					"@todo-app/mcp": ["packages/mcp/src/index.ts"]
				}
	}
}
